<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/notes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notes_description"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:hint="@string/title"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/notes_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_date"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:hint="Description"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_notes_add"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:hint="@string/date"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_notes_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_notes_dismis"
        android:layout_alignBottom="@+id/button_notes_dismis"
        android:layout_gravity="left"
        android:layout_marginEnd="55dp"
        android:layout_toStartOf="@+id/button_notes_dismis"
        android:text="@string/insert" />

    <Button
        android:id="@+id/button_notes_dismis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginBottom="161dp"
        android:layout_marginEnd="62dp"
        android:text="Dismis" />

</RelativeLayout>